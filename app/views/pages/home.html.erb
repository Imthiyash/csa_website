    <script>

        let currentImage = 0;

        function changeImages(direction) {
            const Images = document.querySelector(".image-container");
            const totalImages = Images.children.length;

            currentImage = (currentImage + direction + totalImages) % totalImages;

            Images.style.transform = `translateX(-${currentImage * 100}%)`;
        }

        setInterval(() => {
            changeImages(1);
        }, 3000);


        let currentSlide = 0;
        let autoSlide; // Declare autoSlide in the global scope

        function changeTeamSlide(direction) {
            const slides = document.querySelector(".carousel-slides");
            const totalSlides = slides.children.length;

            currentSlide = (currentSlide + direction + totalSlides) % totalSlides;

            slides.style.transform = `translateX(-${currentSlide * 100}%)`;
        }

        function startAutoSlide() {
            autoSlide = setInterval(() => {
                changeTeamSlide(1);
            }, 3000);
        }

        function stopAutoSlide() {
            clearInterval(autoSlide);
        }

        startAutoSlide();

        const carousel = document.querySelector(".carousel-slides");

        carousel.addEventListener("mouseenter", stopAutoSlide);
        carousel.addEventListener("mouseleave", startAutoSlide);


    </script>
