<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Events" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
    <!-- In the <head> section for Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-image: url('https://t4.ftcdn.net/jpg/08/81/17/51/240_F_881175113_IGsJKVJe5lSMggHPDEwMLABC6W7J5Bep.jpg');
        background-image: url('/BG3_enhanced.jpg');
        background-size: cover;
        background-attachment: scroll;
        background-repeat: no-repeat;
        background-position: center top;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      /* Move the background up a little */
      body::before {
        content: "";
        position: absolute;
        top: -50px; /* Adjust this value to move background higher */
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        background-image: inherit;
        background-size: inherit;
        background-position: center;
        background-repeat: no-repeat;
      }
    </style>
  </head>

  <body>

    <div class="container">
      <div class="column" id="upcoming-events">
        <div class="heading">Upcoming Events</div>
      </div>
      <div class="column" id="completed-events">
        <div class="heading">Completed Events</div>
      </div>
      <div class="column" id="ongoing-events">
        <div class="heading">Ongoing Events</div>
      </div>
    </div>


     <script>

      const events = [
        { name: "Event Name 1", time: "2024-12-30T10:00:00" },
        { name: "Event Name 2", time: "2024-12-30T12:00:00" },
        { name: "Event Name 3", time: "2024-12-29T11:00:00" },
        { name: "Event Name 4", time: "2024-12-31T14:00:00" },
        { name: "Event Name 5", time: "2024-12-30T13:00:00" },
        { name: "Event Name 6", time: "2024-12-28T09:00:00" },
      ];

      const now = new Date();

      events.forEach((event) => {
        const eventTime = new Date(event.time);
        const eventBox = document.createElement("div");
        eventBox.classList.add("event-box");
        eventBox.innerHTML = `
          <h2>${event.name}</h2>
          <p>${eventTime.toLocaleString()}</p>
          <button>Register</button>
        `;

        if (eventTime > now) {
          document.getElementById("upcoming-events").appendChild(eventBox);
        } else if (
          eventTime.toDateString() === now.toDateString() &&
          eventTime <= now
        ) {
          document.getElementById("ongoing-events").appendChild(eventBox);
        } else {
          document.getElementById("completed-events").appendChild(eventBox);
        }
      });
    </script>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
