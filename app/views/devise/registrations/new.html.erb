<div class="flex-row-center-center">
<div class="Create_form">
<div class="flex-row-center-center">
<p style="font-family:Roboto;font-size:30px;">Sign up</p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field input-group input-group mb-3">
    <%= f.label :Email, class: "input-group-text"%>
    <%= f.email_field :email, autofocus: true, class: "form-control"%>
  </div>

  <div class="field input-group input-group mb-3">
    <%= f.label :username, class: "input-group-text"%>
    <%= f.text_field :username, autofocus: true, class: "form-control"%>
  </div>

  <div class="field input-group input-group mb-3">
    <%= f.label :password, class: "input-group-text"%>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="field input-group input-group mb-3">
    <%= f.label :password_confirmation, class: "input-group-text"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions flex-row-center-center">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<div class="flex-column-start-start">
  <%= render "devise/shared/links" %>
</div>

</div>
</div>