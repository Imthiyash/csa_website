<div class="flex-row-center-center">
<div class="Create_form">
<div class="flex-row-center-center">
<p style="font-family:Roboto;font-size:30px;">Log in</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-group input-group mb-3">
    <%= f.label :username, class: "input-group-text"%>
    <%= f.text_field :username, autofocus: true, class: "form-control"%>
  </div>

  <div class="field input-group input-group mb-3">
    <%= f.label :password, class: "input-group-text"%>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex-row-center-center">
    <%= f.submit "Login", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>