<% if current_user.username == "csa" %>
    <div class="flex-row-center-center">
        <div class="Create_form">
            <%= form_with url: events_path, method: :post, class: "d-flex", local: true do |form| %>
                <%= form.text_field :event_name, placeholder: "Create new Event", class: "form-control", style: "margin-right: 10px;" %>
                <%= form.submit 'Create Event', class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
<% end %>

<div class="events_container flex-row-start-center" style="overflow-x: auto;">
<div class="events_table flex-row-start-center upcoming_events" style="overflow-x:auto;">
    <% @upcoming_events.each do |event| %>
        <div class="event_box flex-column-space-evenly-center">
            <div class="event_name" style="text-decoration: underline">Upcoming events</div>
            <div class="event_name"><%= event.event_name %></div>
            <div class="flex-row-space-evenly-center" style="width:100%;">
                <%= link_to "Register", root_path, class: 'btn btn-success' %>
                <%= link_to "Participants", root_path, class: 'btn btn-primary' %>
            </div>
            <% if current_user.username == "csa" %>
                <%= button_to "Start Event", start_path(event), method: :post, class: 'btn btn-success' %>
            <% end %>
        </div>
    <% end %>
</div>
</div>

<div class="events_container flex-row-start-center" style="overflow-x: auto;">
<div class="events_table flex-row-start-center current_events">
    <% @ongoing_events.each do |event| %>
        <div class="event_box flex-column-space-evenly-center">
            <div class="event_name" style="text-decoration: underline">Ongoing events</div>
            <div class="event_name"><%= event.event_name %></div>
            <div class="flex-row-space-between-center" style="width:80%;">
                <%= link_to "Participants", root_path, class: 'btn btn-primary' %>
            </div>
            <% if current_user.username == "csa" %>
                <%= button_to "End Event", end_path(event), method: :post, class: 'btn btn-danger' %>
            <% end %>
        </div>
    <% end %>
</div>
</div>

<div class="events_container flex-row-start-center" style="overflow-x: auto;">
<div class="events_table flex-row-start-center completed_events">
    <% @completed_events.each do |event| %>
        <div class="event_box flex-column-space-evenly-center">
            <div class="event_name" style="text-decoration: underline">Completed events</div>
            <div class="event_name"><%= event.event_name %></div>
        </div>
    <% end %>
</div>
</div>